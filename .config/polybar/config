[bar/top]
monitor = ${xrdb:monitor_left}
width = 100%
height = 36
background = #1f1f1f
foreground = #eee

line-size = 1

padding-left = 2
padding-right = 2
module-margin-left = 2
module-margin-right = 2

separator = |

font-0 = SauceCodePro\ Nerd\ Font:size=12;0
font-1 = Weather Icons:size=12;0

modules-left = title
modules-right = volume backlight wired-network wireless-network bluetooth

wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

overline-size = 10
overline-color = ${self.background}
underline-size = 2
underline-color = ${self.background}

[bar/bottom]
inherit = bar/top
bottom = true

modules-left = i3
modules-right = xkeyboard temperature cpu memory battery weather date


[module/title]
type = internal/xwindow

; Available tags:
;   <label> (default)
format = <label>

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 50


