{
	"python.pythonPath": "/home/rizhiy/.bin/coc_python.sh",
	"python.analysis.typeCheckingMode": "off",
	"python.analysis.diagnosticMode": "workspace",
	"pyright.organizeimports.provider": "isort",
	"pyright.disableProgressNotifications": true,
	"python.sortImports.args": [
		"--profile",
		"black",
		"--line-length",
		"110"
	],
	"python.formatting.provider": "black",
	"python.formatting.blackArgs": [
		"--line-length",
		"110",
		"--skip-magic-trailing-comma"
	],
	"coc.preferences.formatOnSaveFiletypes": [
		"python",
		"markdown",
		"json"
	],
	"explorer.position": "floating",
	"explorer.floating.position": "right-center",
	"explorer.floating.width": 80,
	"explorer.floating.height": -2,
	"explorer.floating.border.title": "Explorer",
	"explorer.icon.enableNerdfont": true,
	"explorer.previewAction.onHover": "labeling",
	"explorer.sources": [
		{
			"name": "bookmark",
			"expand": false
		},
		{
			"name": "file",
			"expand": true
		}
	],
	"explorer.file.root.template": "[icon] [git & 1][hidden & 1][root] [fullpath]",
	"explorer.file.child.template": " [indent][icon | 1] [git & 1][selection & 1 | clip & 1][diagnosticError & 1][filename omitLeft 1][modified][readonly] [linkIcon & 1]",
	"explorer.keyMappings.global": {
		"<cr>": [
			"expandable?",
			[
				"expanded?",
				"collapse",
				"expand"
			],
			"open"
		],
		"v": "open:vsplit",
		".": "toggleHidden"
	},
	"explorer.file.hiddenRules": {
		"extensions": [
			"pyc",
			"egg-info"
		],
		"filenames": [
			"__pycache__"
		]
	}
}
